@import '../../node_modules/skeleton-css/css/normalize.css'
@import '../../node_modules/skeleton-css/css/skeleton.css'

@import './components/*'

// Override skeleton font
body
  font-family Roboto

// Nav style
// Hide navbar
nav
  display none

nav ul
  list-style-type none
  margin 0
  padding 0
  overflow hidden
  background-color #4292c6

nav li
  float left
  margin-bottom 0

nav li a
  display block
  color whitesmoke
  text-align center
  padding 14px 16px
  text-decoration none

nav li a:hover
  border-bottom 5px solid whitesmoke
  color whitesmoke

nav li a.active
  border-bottom 5px solid whitesmoke

// Override skeleton container size
.container
  max-width 80%

// IP table style
.ipTable table
  width 100%

.ipTable th span
  cursor pointer

.ipTable .prevBtn
  float left

.ipTable .nextBtn
  float right

.ipTable .info
  width 50%
  margin 0 auto
  display inline-block
  text-align center

dt
  float left
  clear left

dl dt:nth-child(odd)
  background-color whitesmoke

dl dd:nth-child(odd)
  background-color whitesmoke
